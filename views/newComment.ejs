<% include partials/header.ejs %>

<div class="container">
    <div class="banner">
        <h1>Add a new comment to <%= highlight.player %></h1>    
    </div>

    <div class="newComment">
        <form action="/highlights/<%= highlight._id %>/comments" method="POST">
            <input class="form-control" type="hidden" value="<%= currentUser.username %>" name="author">
            <input class="form-control" type="text" placeholder="comment" name="text">
            <button class="ui green button big form-control">Submit</button>
        </form>
    </div>
</div>



