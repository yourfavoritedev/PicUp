<% include partials/header.ejs %>
 
<div class="container">
    <div class="banner">
        <h1>Welcome to PicUp - the best place to share your favorite basketball moments.</h1>
        <a class="ui inverted blue button huge" href="/highlights">View Albums</a>
        <a class="ui inverted blue button huge" href="/highlights/new">Add Moment</a>
    </div>
    <div class="featuredMoment">
        <% highlight.forEach(function(highlight){ %>
            <h1>Latest Highlight</h1>
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="img-thumbnail">
                    <img class="img-thumbnail" src="<%= highlight.image %>">
                    <div class="caption">
                        <h4><%= highlight.player %></h4>
                    </div>
                    <p><a class="ui teal button huge" href="/highlights/<%= highlight._id %>">View</a></p>
                </div>
            </div>
        <% }) %>    
    </div>
</div>



<% include partials/footer.ejs %>